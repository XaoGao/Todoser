.card.mb-4.shadow
  .card-body
    h4.card-title.text-center
      = project.title
    hr
    p.card-text.mt-3
      = status
      hr
      = h project_description_placeholder
    .text-left
      = I18n.t("project.members")
      = h project.project_members.size
    hr
    .text-right
      = render Button::BackComponent.new(path: projects_path)
      = render Button::EditComponent.new(edit_project_path(project), class: "ml-3")
      = button_to_archive
      = button_to_leave
      = render Button::AddComponent.new(new_project_task_path(project, task), class: "ml-3")
